@model SearchViewModel


<h1 style="text-align:center">Product Search</h1>
<input class="form-control" style="margin-top:30px;margin-bottom:30px;" type="text" id="search-input" placeholder="Search?" value="@Model.Search" />
<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>UnitsInStock</th>
            <th>###</th>
        </tr>
    </thead>
    <tbody id="product-list">
    </tbody>
</table>

